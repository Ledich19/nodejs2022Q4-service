// This is your Prisma schema file,
// learn more about it in the docs https//pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  login String  @unique
  password String
  version Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Artist {
  id String @id @default(uuid())
  name String
  grammy Boolean @default(false)
  favs Favs[]
}
model Album {
  id String @id @default(uuid())
  name String
  year Int
  artistId String?
  favs Favs[]
}
model Track {
  id String @id @default(uuid())
  name String
  artistId String?
  albumId String?
  duration Int
  favs Favs[]
}
model Favs {
  id Int @id @default(autoincrement())
  artists Artist[]
  albums Album[]
  tracks Track[]
}